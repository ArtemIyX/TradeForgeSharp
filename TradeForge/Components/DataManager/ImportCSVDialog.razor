<!-- File selection -->
<div class="field">
    <label class="label">CSV file</label>
    <div class="field has-addons">
        <div class="control is-expanded">
            <input class="input" type="text" readonly
                   value="@FilePath"
                   placeholder="Select a file…"/>
        </div>
        <div class="control">
            <button class="button" @onclick="BrowseClick">
                <span class="icon">
                    <i class="fas fa-folder-open"></i>
                </span>
            </button>
        </div>
    </div>
</div>

<!-- Header template -->
<div class="field">
    <label class="label">Header template</label>
    <div class="control">
        <textarea class="textarea"
                  rows="2"
                  placeholder="e.g. Date,High,Low,Open,Close,Volume"
                  @bind="HeaderTemplate"/>
    </div>
</div>

<!-- Delimiter – single line -->
<div class="field is-horizontal">
    <div class="field-label is-normal">
        <label class="label">Delimiter</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input is-small" style="width:4rem"
                       type="text" maxlength="1"
                       @bind="Delimiter" />
            </div>
        </div>
    </div>
</div>

@code {

    public string FilePath { get; set; } = "";
    public string HeaderTemplate { get; set; } = "Date,High,Low,Open,Close,Volume";
    public string Delimiter { get; set; } = ",";

    private void BrowseClick()
    {
    }

}